<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>servlets.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CarBrowseServlet</servlet-name>
        <servlet-class>servlets.CarBrowseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarBrowseServlet</servlet-name>
        <url-pattern>/carbrowse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarEditServlet</servlet-name>
        <servlet-class>servlets.CarEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarEditServlet</servlet-name>
        <url-pattern>/caredit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowroomBrowseServlet</servlet-name>
        <servlet-class>servlets.ShowroomBrowseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowroomBrowseServlet</servlet-name>
        <url-pattern>/showroombrowse</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ShowroomEditServlet</servlet-name>
        <servlet-class>servlets.ShowroomEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowroomEditServlet</servlet-name>
        <url-pattern>/showroomedit/*</url-pattern>
    </servlet-mapping>



</web-app>